generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum ContentType {
  VIDEO
  DOCUMENT
  QUIZ
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  username       String  @unique
  hashedPassword String
  firstName      String?
  lastName       String?
  role           Role    @default(STUDENT)

  // Email verification
  isVerified              Boolean   @default(false)
  verificationToken       String?   @unique
  verificationTokenExpiry DateTime?

  // Password reset
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  coursesAsTeacher Course[]      @relation("TeacherCourses")
  enrollments      Enrollment[]
  quizAttempts     QuizAttempt[]
  payments         Payment[]
  reviews          Review[]
  comments         Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  courses Course[]
}

model Course {
  id           Int     @id @default(autoincrement())
  title        String
  description  String
  price        Float
  thumbnailUrl String?

  teacherId Int
  teacher   User @relation("TeacherCourses", fields: [teacherId], references: [id])

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  modules     Module[]
  enrollments Enrollment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Module {
  id    Int    @id @default(autoincrement())
  title String
  order Int

  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  contents Content[]
}

model Content {
  id                 Int         @id @default(autoincrement())
  title              String
  order              Int
  contentType        ContentType
  videoUrl           String?
  durationInSeconds  Int?
  documentUrl        String?
  fileType           String?
  timeLimitInMinutes Int?

  moduleId Int
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  questions         Question[]
  quizAttempts      QuizAttempt[]
  comments          Comment[]
  contentProgresses ContentProgress[]
}

model Question {
  id           Int    @id @default(autoincrement())
  questionText String

  contentId Int
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  options AnswerOption[]
}

model AnswerOption {
  id         Int     @id @default(autoincrement())
  optionText String
  isCorrect  Boolean

  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Enrollment {
  id             Int       @id @default(autoincrement())
  enrollmentDate DateTime  @default(now())
  progress       Float     @default(0)
  completionDate DateTime?

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  payment           Payment?          @relation("EnrollmentPayment")
  review            Review?           @relation("EnrollmentReview")
  contentProgresses ContentProgress[]

  @@unique([studentId, courseId])
}

model ContentProgress {
  id          Int      @id @default(autoincrement())
  completedAt DateTime @default(now())

  enrollmentId Int
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)

  contentId Int
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@unique([enrollmentId, contentId])
}

model Review {
  id         Int      @id @default(autoincrement())
  rating     Int
  comment    String?
  datePosted DateTime @default(now())

  enrollmentId Int        @unique
  enrollment   Enrollment @relation("EnrollmentReview", fields: [enrollmentId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])
}

model QuizAttempt {
  id        Int      @id @default(autoincrement())
  score     Float
  startTime DateTime
  endTime   DateTime

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  quizContentId Int
  quizContent   Content @relation(fields: [quizContentId], references: [id])
}

model Payment {
  id              Int    @id @default(autoincrement())
  amount          Float
  status          String
  stripeSessionId String @unique

  enrollmentId Int        @unique
  enrollment   Enrollment @relation("EnrollmentPayment", fields: [enrollmentId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  createdAt DateTime @default(now())
}

model Comment {
  id   Int    @id @default(autoincrement())
  text String

  authorId Int
  author   User @relation(fields: [authorId], references: [id])

  contentId Int
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  parentId Int?
  parent   Comment?  @relation("Replies", fields: [parentId], references: [id])
  replies  Comment[] @relation("Replies")

  createdAt DateTime @default(now())
}

model Promotion {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  description String?
  discountType String  // 'PERCENTAGE' or 'FIXED'
  discountValue Float   // Percentage (0-100) or fixed amount
  minPurchaseAmount Float? // Minimum purchase to apply
  maxDiscountAmount Float? // Maximum discount (for percentage)
  usageLimit  Int?      // Total usage limit (null = unlimited)
  usedCount   Int       @default(0)
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean   @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
